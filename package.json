{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "description": "A starter repo for next.js + typescript + tailwindcss",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx --fix"
